.ui.attached.stackable.menu
      .ui.container
        img.logo.large(src='/images/logo-codebuddy-s.png')
        if (user)
          //- a.item(href='/dashboard')
            i.grid.layout.icon
          //  |  Dashboard
          a.item(href='/lobby')
            i.coffee.icon
            |  Lobby
          if (section)
            a.item(href='/classroom?section_id='+section.section_id)
              i.grid.layout.icon
              |  Classroom
          a.item(href='/notifications')
            i.Alarm.icon
            |  Notifications
            //- .ui.red.horizontal.label 1
          .ui.simple.dropdown.right.item
              //- i.user.icon
              img.ui.avatar.image(src=`${user.img}`)
              = `${user.info.firstname} ${user.info.lastname}`
              i.dropdown.icon
              .menu
                .item
                  i.info.icon
                  | Signed in as 
                  = user.username
                .ui.inverted.divider
                case occupation
                  when 0
                    - break
                  default
                    a.item(href='/profile/'+user.username)
                      i.unhide.icon
                      |  Your Profile
                //- a.item(href='/settings/profile')
                //-   i.setting.icon
                //-   |  Setting Profile
                a.item(href='/signout')
                  i.sign.out.icon
                  |  Sign Out
        else
            a.item(href='/')
              i.home.icon
              |  Home
            //- a.item(href='/howitworked')
            //-   i.info.icon
            //-   |  How it worked ?
            //- a.item(href='/aboutus')
            //-   i.users.icon
            //-   |  About us
            a.right.item(href='/signin')
              i.sign.in.icon
              |  Sign in
